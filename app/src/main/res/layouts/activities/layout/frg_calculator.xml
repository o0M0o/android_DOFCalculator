<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="wxm.dofcalculator.ui.calculator.ACCalculator">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_calculator_result"
        android:padding="8dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/cl_adjust_para"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:layout_editor_absoluteX="0dp">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_calculator_result_info"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="0dp"
            android:layout_marginTop="112dp">

            <!-- front focal -->
            <TextView
                android:id="@+id/tv_front_focal_tag"
                android:textSize="18sp"
                android:textColor="@color/text_fit"
                app:layout_constraintStart_toStartOf="parent"
                android:text="前景深"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_front_focal_val"
                android:layout_marginStart="24dp"
                app:layout_constraintStart_toEndOf="@id/tv_front_focal_tag"
                app:layout_constraintTop_toTopOf="@id/tv_front_focal_tag"
                app:layout_constraintBottom_toBottomOf="@id/tv_front_focal_tag"
                android:text="7.84米"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- back focal -->
            <TextView
                android:id="@+id/tv_back_focal_tag"
                android:textSize="18sp"
                android:textColor="@color/text_fit"
                android:layout_marginTop="6dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_front_focal_tag"
                android:text="后景深"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_back_focal_val"
                app:layout_constraintStart_toStartOf="@id/tv_front_focal_val"
                app:layout_constraintStart_toEndOf="@id/tv_back_focal_tag"
                app:layout_constraintTop_toTopOf="@id/tv_back_focal_tag"
                app:layout_constraintBottom_toBottomOf="@id/tv_back_focal_tag"
                android:text="17.84米"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <!-- back focal -->
            <TextView
                android:id="@+id/tv_total_focal_tag"
                android:textSize="18sp"
                android:textColor="@color/text_fit"
                android:layout_marginTop="6dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_back_focal_tag"
                android:text="总景深"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_total_focal_val"
                app:layout_constraintStart_toStartOf="@id/tv_front_focal_val"
                app:layout_constraintStart_toEndOf="@id/tv_back_focal_tag"
                app:layout_constraintTop_toTopOf="@id/tv_total_focal_tag"
                app:layout_constraintBottom_toBottomOf="@id/tv_total_focal_tag"
                android:text="10.00米"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>



    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_adjust_para"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="96dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <!-- for lens focal -->
        <TextView
            android:id="@+id/tv_lens_focal"
            android:textSize="18sp"
            android:textColor="@color/text_fit"
            app:layout_constraintTop_toTopOf="@+id/sb_lens_focal"
            app:layout_constraintBottom_toBottomOf="@id/sb_lens_focal"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/tv_lens_focal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_lens_focal_val"
            android:textSize="16sp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textColor="@color/turquoise"
            app:layout_constraintTop_toTopOf="@+id/sb_lens_focal"
            app:layout_constraintBottom_toBottomOf="@id/sb_lens_focal"
            app:layout_constraintStart_toEndOf="@id/tv_lens_focal"
            android:text="50mm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <SeekBar
            android:id="@+id/sb_lens_focal"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_lens_focal_val"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <!-- for lens aperture -->
        <TextView
            android:id="@+id/tv_lens_aperture"
            android:textSize="18sp"
            android:textColor="@color/text_fit"
            app:layout_constraintTop_toTopOf="@+id/sb_lens_aperture"
            app:layout_constraintBottom_toBottomOf="@id/sb_lens_aperture"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/tv_lens_aperture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_lens_aperture_val"
            android:textSize="16sp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textColor="@color/turquoise"
            app:layout_constraintTop_toTopOf="@+id/sb_lens_aperture"
            app:layout_constraintBottom_toBottomOf="@id/sb_lens_aperture"
            app:layout_constraintStart_toEndOf="@id/tv_lens_aperture"
            android:text="F/1.2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <SeekBar
            android:id="@+id/sb_lens_aperture"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/sb_lens_focal"
            app:layout_constraintStart_toStartOf="@id/sb_lens_focal"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- for object distance -->
        <TextView
            android:id="@+id/tv_object_distance"
            android:textSize="18sp"
            android:textColor="@color/text_fit"
            app:layout_constraintTop_toTopOf="@+id/sb_object_distance"
            app:layout_constraintBottom_toBottomOf="@id/sb_object_distance"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/tv_object_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_object_distance_val"
            android:textSize="16sp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textColor="@color/turquoise"
            app:layout_constraintTop_toTopOf="@+id/sb_object_distance"
            app:layout_constraintBottom_toBottomOf="@id/sb_object_distance"
            app:layout_constraintStart_toEndOf="@id/tv_object_distance"
            android:text="10m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <SeekBar
            android:id="@+id/sb_object_distance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/sb_lens_aperture"
            app:layout_constraintStart_toStartOf="@id/sb_lens_focal"
            app:layout_constraintEnd_toEndOf="parent" />
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>
