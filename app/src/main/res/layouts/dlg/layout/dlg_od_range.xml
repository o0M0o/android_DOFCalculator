<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_od_min"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="4dp"
        tools:layout_editor_absoluteX="8dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/ti_od_min"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:inputType="number"
            android:hint="@string/hint_object_distance_min" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_od_max"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/til_od_min"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="4dp"
        tools:layout_editor_absoluteX="8dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/ti_od_max"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:inputType="number"
            android:hint="@string/hint_object_distance_max" />
    </android.support.design.widget.TextInputLayout>

</android.support.constraint.ConstraintLayout>