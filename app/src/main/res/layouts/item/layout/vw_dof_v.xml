<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <include
        android:id="@+id/cl_dof_info"
        layout="@layout/vwit_dof_info_v"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <wxm.uilib.DistanceMeter.DistanceMeter
        android:id="@+id/evw_meter"
        android:layout_marginTop="4dp"
        android:layout_width="0dp"
        android:layout_height="96dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_dof_info"
        app:dmMainScaleCount="5"
        app:dmSubScaleCount="10"
        app:dmTagHeight="10dp"
        app:dmTagWidth="16dp"
        app:dmMainScaleHeight="36dp"
        app:dmSubScaleHeight="24dp"
        app:dmTextSize="12sp" />
</android.support.constraint.ConstraintLayout>