<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="wxm.dofcalculator">

    <application
        android:name=".utility.ContextUtil"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.start.ACStart"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.device.ACDevice"
            android:configChanges="orientation|screenSize"
            android:label="@string/label_device"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".ui.calculator.ACCalculator"
            android:configChanges="orientation|screenSize"
            android:label="@string/label_calculator"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>