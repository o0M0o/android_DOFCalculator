<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="wxm.dofcalculator">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Utility.ContextUtil"
        android:allowBackup="true"
        android:icon="@drawable/ic_dof_big"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.start.ACStart"
            android:label="@string/label_start_page"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.help.ACHelp"
            android:configChanges="orientation|screenSize"
            android:label="@string/label_help"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".ui.setting.ACSetting"
            android:configChanges="orientation|screenSize"
            android:label="@string/label_setting"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".ui.device.ACDevice"
            android:configChanges="orientation|screenSize"
            android:label="@string/label_device"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".ui.calculator.ACCalculator"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/label_calculator"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>